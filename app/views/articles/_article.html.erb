<div class="row mx-auto col-6">
  <%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image, "画像" %>
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :content, "内容" %>
    <%= f.text_field :content, class: "form-control" %>
  </div>

  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>

  <% end %>
</div>